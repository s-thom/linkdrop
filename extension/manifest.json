{
  "name": "linkdrop",
  "description": "Companion extension for linkdrop",
  "version": "1.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "72": "/images/icon-72x72.png",
      "96": "/images/icon-96x96.png",
      "128": "/images/icon-128x128.png"
    }
  },
  "icons": {
    "72": "/images/icon-72x72.png",
    "96": "/images/icon-96x96.png",
    "128": "/images/icon-128x128.png"
  },

  "host_permissions": ["https://linkdrop.sthom.kiwi/"],
  "permissions": ["tabs"],
  "browser_specific_settings": {
    "gecko": {
      "id": "{5ff7b717-fcc6-403f-9d1b-7fa41b7dd9df}",
      "strict_min_version": "109.0"
    }
  }
}
